<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".MainActivity4">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:contentDescription="@string/c_d_bacgrund_futer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@color/futer_bacgraund" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="222sp"
        android:layout_height="60sp"
        android:contentDescription="@string/tp_logo_app"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_logo_new" />

    <ImageView
        android:id="@+id/imageView_MTC"
        android:layout_width="114dp"
        android:layout_height="104dp"
        android:layout_marginTop="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.131"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_mtc" />

    <TextView
        android:id="@+id/textView_mtc_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="4dp"
        android:text="MTC"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageView_MTC"
        app:layout_constraintTop_toTopOf="@+id/imageView_MTC" />

    <TextView
        android:id="@+id/textView_mtc_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="MTSS"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_mtc_main_name"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="@+id/textView_mtc_main_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_mtc_main_name" />

    <TextView
        android:id="@+id/textView_cost_mtc_stalse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Цена за акцию"
        android:textColor="#E1F37F"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.736"
        app:layout_constraintStart_toEndOf="@+id/textView_mtc_main_name"
        app:layout_constraintTop_toTopOf="@+id/textView_mtc_main_name" />

    <TextView
        android:id="@+id/textView_cost_mtc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="308,1 ₽"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_cost_mtc_stalse"
        app:layout_constraintStart_toStartOf="@+id/textView_cost_mtc_stalse"
        app:layout_constraintTop_toBottomOf="@+id/textView_cost_mtc_stalse" />

    <ImageView
        android:id="@+id/imageView_aeroflot"
        android:layout_width="114dp"
        android:layout_height="107dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_MTC"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView_MTC"
        app:layout_constraintTop_toBottomOf="@+id/imageView_MTC"
        app:srcCompat="@drawable/ic_aeroflot" />

    <ImageView
        android:id="@+id/imageView_bash_neft"
        android:layout_width="112dp"
        android:layout_height="108dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="@+id/imageView_aeroflot"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imageView_aeroflot"
        app:layout_constraintTop_toBottomOf="@+id/imageView_aeroflot"
        app:srcCompat="@drawable/ic_bash_neft" />

    <TextView
        android:id="@+id/textView_aeroflot_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Аэрофлот"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toEndOf="@+id/imageView_aeroflot"
        app:layout_constraintTop_toTopOf="@+id/imageView_aeroflot" />

    <TextView
        android:id="@+id/textView_aeroflot_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="AFLT"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_aeroflot_main_name"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintStart_toStartOf="@+id/textView_aeroflot_main_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_aeroflot_main_name" />

    <TextView
        android:id="@+id/textView_cost_aeroflot_stalse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цена за акцию"
        android:textColor="#E1F37F"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_aeroflot_main_name"
        app:layout_constraintTop_toTopOf="@+id/textView_aeroflot_main_name" />

    <TextView
        android:id="@+id/textView_bash_neft_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Башнефть"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toEndOf="@+id/imageView_bash_neft"
        app:layout_constraintTop_toTopOf="@+id/imageView_bash_neft" />

    <TextView
        android:id="@+id/textView_bash_neft_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="BANE"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_bash_neft_main_name"
        app:layout_constraintHorizontal_bias="0.42"
        app:layout_constraintStart_toStartOf="@+id/textView_bash_neft_main_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_bash_neft_main_name" />

    <TextView
        android:id="@+id/textView_cost_aeroflot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="49,68 ₽"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_cost_aeroflot_stalse"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/textView_cost_aeroflot_stalse"
        app:layout_constraintTop_toBottomOf="@+id/textView_cost_aeroflot_stalse" />

    <TextView
        android:id="@+id/textView_cost_bash_neft_stalse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цена за акцию"
        android:textColor="#E1F37F"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView_bash_neft_main_name"
        app:layout_constraintTop_toTopOf="@+id/textView_bash_neft_main_name" />

    <TextView
        android:id="@+id/textView_cost_bash_neft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="3 335 ₽"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView_cost_bash_neft_stalse"
        app:layout_constraintHorizontal_bias="0.379"
        app:layout_constraintStart_toStartOf="@+id/textView_cost_bash_neft_stalse"
        app:layout_constraintTop_toBottomOf="@+id/textView_cost_bash_neft_stalse" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="660dp"
        android:text="Обнавить"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>